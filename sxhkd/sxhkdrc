# Wm keybinds

# Reload the config
super + Escape
	pkill -USR1 -x sxhkd && notify-send "Reloading the keybinds..."

# Terminal
super + Return
 kitty 

# Drun, Run, And Window Switch
super + r
  rofi -show combi

# Rofi Emoji
super + ctrl + e
  rofi -show emoji

# Rofi Calc
super + shift + c
  rofi -show calc -calc-command 'xdotool type --clearmodifiers "{result}"'

# Color Picker 
super + ctrl + c
  colorpicker

# Power Menu
super + p
  powermenu

# Greenclip
super + c
  rofi -modi "clipboard:greenclip print" \
  -show clipboard -run-command '{cmd}'

# Locking Computer
super + shift + Escape
  i3lock-fancy -g

# Gui File Manager
super + f
  thunar

# Tui File Manager
super + x
  kitty -e ranger

# Browser 
super + b
  brave-browser

# Relanching Picom 
super + shift + e
  pkill -USR1 -x picom && notify-send "Relanching Picom..."

# Killing Picom
super + shift + p
  pkill picom && notify-send "Killed Picom..."

# Starting Picom
super + ctrl + p
  picom --experimental-backends -b && notify-send "Starting Picom..."

# Screenshot 
Print
  flameshot gui

super + Print
  flameshot screen

super + shift + Print
  flameshot launcher

# Brightness
XF86MonBrightnessUp
  xbacklight -inc 10

XF86MonBrightnessDown
  xbacklight -dec 10

# Media
XF86AudioRaiseVolume
  pactl set-sink-volume 0 +5%

XF86AudioLowerVolume
  pactl set-sink-volume 0 -5%

XF86AudioMute
  pactl set-sink-mute 0 toggle

# Music
XF86AudioNext
  playerctl next --player=rhythmbox

XF86AudioPrev
  playerctl previous --player=rhythmbox

XF86AudioPlay
  playerctl play-pause --player=rhythmbox
