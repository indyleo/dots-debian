# Keybinds

# Reload the config
super + Escape
	pkill -USR1 -x sxhkd && notify-send "Reloading the keybinds..."

# Terminal
super + Return
 kitty 

# Run Prompt
super + r
  rofi -show drun

# Rofi Emoji
super + ctrl + e
  rofi -show emoji

# Rofi Calc
super + shift + c
  rofi -show calc -calc-command "echo -n '{result}' | xclip"

# Config Menu
super + ctrl + c
  configmenu

# Power Menu
super + p
  powermenu

# Greenclip
super + c
  rofi -modi "clipboard:greenclip print" \
  -show clipboard -run-command '{cmd}'

# Locking Computer
super + shift + Escape
  i3lock-fancy -g

# File Manager
super + f
  thunar

# Browser 
super + b
  brave-browser

# Relanching Picom 
super + shift + e
  pkill -USR1 -x picom && notify-send "Relanching Picom..."

# Killing Picom
super + shift + p
  pkill picom && notify-send "Killed Picom..."

# Starting Picom
super + ctrl + p
  picom -b && notify-send "Starting Picom..."

# Starting Screenkey
super + shift + s
  screenkey --no-systray --opacity 0.9 --bg-color "#4C566A" --font-color "#ECEFF4" -p fixed -g 627x140+1283+35 & notify-send "Starting Screenkey..."

# Killing Screenkey
super + s
  pkill screenkey && notify-send "Killing Screenkey..."

# Screenshot 
Print
  flameshot gui

super + Print
  flameshot screen

super + shift + Print
  flameshot launcher

# Brightness
XF86MonBrightness{Up,Down}	
  brightnessctl set 5%{+,-}

# Media
super + {Up,Down}
  pamixer {-i,-d} 5

super + shift + Down
  pamixer --toggle-mute

XF86Audio{Raise,Lower}Volume
  pamixer {-i,-d} 5

XF86AudioMute
  pamixer --toggle-mute

# Music
super + {Right,Left}
  playerctl {next,previous} --player=rhythmbox

super + Pause
  playerctl play-pause --player=rhythmbox

XF86Audio{Next,Prev}
  playerctl {next,previous} --player=rhythmbox

XF86AudioPlay
  playerctl play-pause --player=rhythmbox
