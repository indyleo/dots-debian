# Wm keybinds

# Terminal
super + Return
  alacritty

# Drun, Run, And Window Switch
super + r
  rofi -show combi

# Power Menu
super + p
  rofi -show power-menu -modi power-menu:rofi-power-menu \
  -theme 'nord' \
  -font 'FiraCode Nerd Font 16'

# Greenclip
super + d
  rofi -modi "clipboard:greenclip print" \
  -show clipboard -run-command '{cmd}'

# Locking Computer
super + s
  i3lock-fancy -g

# Gui File Manager
super + f
  thunar

# Tui File Manager
super + x
  alacritty -e ranger

# Browser 
super + b
  firefox

# Brightness
XF86MonBrightnessUp
  xbacklight -inc 10

XF86MonBrightnessDown
  xbacklight -dec 10

# Media
XF86AudioRaiseVolume
  pactl set-sink-volume 0 +5%

XF86AudioLowerVolume
  pactl set-sink-volume 0 -5%

XF86AudioMute
  pactl set-sink-mute 0 toggle

# Music
XF86AudioNext
  playerctl next --player=rhythmbox

XF86AudioPrev
  playerctl previous --player=rhythmbox

XF86AudioPlay
  playerctl play-pause --player=rhythmbox

# Screenshot 
Print
  flameshot gui

super + Print
  flameshot screen

super + shift + Print
  flameshot launcher
