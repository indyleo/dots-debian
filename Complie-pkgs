# Making directories & files 
mkdir -p ~/Github ~/Img ~/Applications ~/Scripts ~/.icons ~/.themes ~/.cache/zsh
touch ~/.cache/zsh/history

# Headsetcontrol
git clone https://github.com/Sapd/HeadsetControl 
cd HeadsetControl
mkdir build
cd build
cmake ..
make
sudo make install
sudo udevadm control --reload-rules
sudo udevadm trigger

# Shell Color Script
git clone https://gitlab.com/dwt1/shell-color-scripts.git
cd shell-color-scripts
sudo make install

# Envycontrol
git clone https://github.com/geminis3/envycontrol.git
cd envycontrol
sudo pip install .

# Fetch-Master-6000
wget https://raw.githubusercontent.com/anhsirk0/fetch-master-6000/master/fm6000.pl -O fm6000
chmod +x fm6000
sudo mv fm6000 /usr/bin/

# Pfetch
wget https://raw.githubusercontent.com/dylanaraps/pfetch/master/pfetch#
chmod +x pfetch
sudo mv pfetch /usr/bin/

# Wallpapers
git clone https://gitlab.com/dwt1/wallpapers.git
mv ~/Downloads/dotfiles-main/Backrounds ~/.config/
mv ~/Github/wallpapers/ ~/.config/Wallpapers

# Bashrc and zshrc
rm ~/.bashrc
rm ~/.zshrc
mv ~/Downloads/dotfiles-main/.bashrc ~/
mv ~/Downloads/dotfiles-main/.zshrc ~/ 

# Neofetch
rm -rf ~/.config/neofetch/
mv ~/Downloads/dotfiles-main/neofetch ~/.config/

# Rofi
rofi -modi drun,window,run

# Adding flathub repo
flatpak remote-add --if-not-exists flathub https://flathub.org/repo/flathub.flatpakrepo

# Installing lsd
cargo install lsd

# Installing bob-nvim
cargo install bob-nvim

# Installing protontrix
pipx install protontricks

# Installing moar (PAGER)
https://github.com/walles/moar/releases/latest (Download the moar-VER-linux-386 )
chmod a+x moar-*-*-*
mv moar-*-*-* ~/.local/bin/moar

# Installing protonvpn
wget https://repo.protonvpn.com/debian/dists/stable/main/binary-all/protonvpn-stable-release_1.0.3_all.deb
sudo apt update
sudo apt install protonvpn
sudo apt upgrade

# Install brave-browser
sudo nala install apt-transport-https curl -y
sudo curl -fsSLo /usr/share/keyrings/brave-browser-archive-keyring.gpg https://brave-browser-apt-release.s3.brave.com/brave-browser-archive-keyring.gpg
echo "deb [signed-by=/usr/share/keyrings/brave-browser-archive-keyring.gpg arch=amd64] https://brave-browser-apt-release.s3.brave.com/ stable main" | sudo tee /etc/apt/sources.list.d/brave-browser-release.list
sudo nala update
sudo nala install brave-browser -y
