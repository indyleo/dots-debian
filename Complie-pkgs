# Making directories & files 
mkdir -p ~/Github ~/Img ~/Applications ~/Scripts ~/.icons ~/.themes ~/.cache/zsh ~/.local/bin
touch ~/.cache/zsh/history

# Headsetcontrol
git clone https://github.com/Sapd/HeadsetControl 
cd HeadsetControl
mkdir build
cd build
cmake ..
make
sudo make install
sudo udevadm control --reload-rules
sudo udevadm trigger

# Envycontrol
git clone https://github.com/geminis3/envycontrol.git
cd envycontrol
sudo pip install .

# Ranger Dev Icons
git clone https://github.com/alexanderjeurissen/ranger_devicons ~/.config/ranger/plugins/ranger_devicons
echo "default_linemode devicons" >> $HOME/.config/ranger/rc.conf

# Adding flathub repo
flatpak remote-add --if-not-exists flathub https://flathub.org/repo/flathub.flatpakrepo

# Rustup
curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh

# Installing lsd & bob-nvim
cargo install lsd bob-nvim

# Installing zsh-compleations
cd ~/Github && git clone https://github.com/zsh-users/zsh-completions.git

# Installing moar (PAGER)
https://github.com/walles/moar/releases/latest (Download the moar-VER-linux-386 )
chmod a+x moar-*-*-*
mv moar-*-*-* ~/.local/bin/moar

# Mutter-Rounded
cd ~/Github
git clone https://github.com/yilozt/mutter-rounded
cd ./mutter-rounded/ubuntu
./package.sh
sudo dpkg -i libmutter-10-0*.deb mutter-common*.deb

# Mutter-Rounded-Settings
cd ~/Github
git clone https://github.com/yilozt/mutter-rounded-setting
cd ./mutter-rounded-setting
./install

# Pfetch
wget https://raw.githubusercontent.com/dylanaraps/pfetch/master/pfetch
chmod a+x pfetch
sudo mv pfetch /usr/bin/

# Nvidia Setting
nvidia-settings --assign CurrentMetaMode="nvidia-auto-select +0+0 {ForceFullCompositionPipeline=On}"
