#!/bin/env bash

# Ensure flameshot is installed
if ! command -v flameshot &> /dev/null; then
    notify-send "Error: flameshot is not installed."
    exit 1
fi

# Screenshot functions
ss_selection() {
    flameshot gui
}

ss_screen() {
    flameshot screen
}

ss_launcher() {
    flameshot launcher
}

# Handle user input
case "$1" in
    --select) ss_selection ;;
    --screen) ss_screen ;;
    --launcher) ss_launcher ;;
    *)
        notify-send "Error: Unknown argument '$1'. Use --select, --screen, or --launcher."
        exit 1
        ;;
esac

