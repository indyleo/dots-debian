# Keybinds (Awesome)

# Reload the config
super + Escape
	pkill -USR1 -x sxhkd && notify-send "Reloading the keybinds..."

# Terminal
super + Return
  wezterm start 

# Run Prompt
super + r
  rofi -show drun

# Window Prompt
super + Tab
	rofi -show window

# Power Menu
super + p
  powermenu

# Greenclip
super + c
  rofi -modi "clipboard:greenclip print" \
  -show clipboard -run-command '{cmd}'

# Locking Computer
super + shift + Escape
  locker

# File Manager
super + f
  thunar

# Browser 
super + b
  floorp

# Music 
super + m
  flatpak run io.github.dweymouth.supersonic

# Discord 
super + d
  flatpak run dev.vencord.Vesktop

# Screenshot 
Print
	sstool --selec

super + Print
	sstool --scr

super + shift + Print
	sstool --cho

# Brightness
XF86MonBrightness{Up,Down}	
  brightnessctrl {--inc,--dec} 5

# Media
super + {Up,Down}
  volumectrl {--inc,--dec} 5

super + alt + Down
  volumectrl --togglemute

XF86Audio{Raise,Lower}Volume
  volumectrl {--inc,--dec} 5

XF86AudioMute
  volumectrl --togglemute

# Music
super + {Right,Left}
  songctrl {--skip,--backskip} rhythmbox

super + Pause
  songctrl --togglepause rhythmbox

XF86Audio{Next,Prev}
  songctrl {--skip,--backskip} rhythmbox

XF86AudioPlay
  songctrl --togglepause rhythmbox

# Video
super + shift + {Right,Left}
   vidctrl {--skip,--backskip}

super + shift + {Up,Down}
   vidctrl {--forward,--backward}

super + shift + Pause
  vidctrl --togglepause

# Change bg
super + shift + {b,g}
	xwalr {~/Pictures/Wallpapers,~/Pictures/wallpapers}
