# Keybinds (Awesome)

# Reload the config
super + Escape
	pkill -USR1 -x sxhkd && notify-send "Reloading the keybinds..."

# Terminal
super + Return
 kitty 

# Neovide
super + shift + n
	neovide

# Vscodium
super + shift + v
	codium

# Gedit
super + ctrl + g
	gedit

# Nvim
super + alt + e
	kitty -e nvim

# Run Prompt
super + r
  rofi -show drun

# Rofi Emoji
super + ctrl + e
  rofi -show emoji

# Rofi Calc
super + shift + c
  rofi -show calc -calc-command "echo -n '{result}' | xclip"

# ConfigMenu
super + alt + c
  configmenu

# Power Menu
super + p
  powermenu

# Streaming-audio
super + shift + a
	streaming-audio; xcowsay "Streaming Audio On"

# Greenclip
super + c
  rofi -modi "clipboard:greenclip print" \
  -show clipboard -run-command '{cmd}'

# Locking Computer
super + shift + Escape
  locker

# File Manager
super + f
  thunar

# Browser 
super + b
  brave-browser

# Rhythmbox 
super + ctrl + r
  rhythmbox

# Discord 
super + d
  flatpak run com.discordapp.Discord

# Relanching Picom 
super + shift + e
  pkill -USR1 -x picom && notify-send "Relanching Picom..."

# Killing Picom
super + shift + p
  pkill picom && notify-send "Killed Picom..."

# Starting Picom
super + ctrl + p
  picom -b && notify-send "Starting Picom..."

# Starting Screenkey
super + shift + s
  screenkey --no-systray --opacity 0.9 --bg-color "#4C566A" --font-color "#ECEFF4" -p fixed -g 627x140+1283+35 & notify-send "Starting Screenkey..."

# Killing Screenkey
super + s
  pkill screenkey && notify-send "Killing Screenkey..."

# Screenshot 
Print
	sstool --selec

super + Print
	sstool --scr

super + shift + Print
	sstool --cho

# Brightness
XF86MonBrightness{Up,Down}	
  brightnessctrl {--inc,--dec} 5

# Media
super + {Up,Down}
  volumectrl {--inc,--dec} 5

super + shift + Down
  volumectrl --togglemut

XF86Audio{Raise,Lower}Volume
  volumectrl {--inc,--dec} 5

XF86AudioMute
  volumectrl --togglemute

# Music
super + {Right,Left}
  songctrl {--skip,--backskip} rhythmbox

super + Pause
  songctrl --togglepause rhythmbox

XF86Audio{Next,Prev}
  songctrl {--skip,--backskip} rhythmbox

XF86AudioPlay
  songctrl --togglepause rhythmbox

# Chanf bg
super + shift + {b,g}
	xwalr {~/Pictures/Wallpapers,~/Pictures/wallpapers}
